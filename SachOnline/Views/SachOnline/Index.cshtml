<style>
    /* Định dạng cho thẻ nav */
    nav.text-center {
        text-align: center; /* Căn chữ giữa màn hình */
        transform: translate(40%, 60%); /* Dịch chuyển phần tử ngược lại 50% chiều rộng và 50% chiều cao để căn giữa */
        z-index: 1000; /* Đặt z-index cao để đảm bảo nó nằm trên các phần tử khác */
    }

    /* Định dạng cho danh sách pagination */
    .pagination {
        margin: 20px 0; /* Khoảng cách từ trên và dưới */
        padding: 0;
    }

        /* Định dạng cho các mục trong danh sách */
        .pagination li {
            display: inline; /* Hiển thị theo chiều ngang */
            margin-right: 10px; /* Khoảng cách giữa các mục */
        }

        /* Định dạng cho mục hiện tại (active) */
        .pagination .active {
            font-weight: bold; /* Đậm chữ cho mục hiện tại */
        }

        /* Định dạng cho các liên kết */
        .pagination a {
            text-decoration: none; /* Loại bỏ gạch chân */
            color: #333; /* Màu chữ */
        }

        /* Định dạng cho nút Previous và Next */
        .pagination li:first-child a,
        .pagination li:last-child a {
            font-weight: normal; /* Đặt lại độ đậm chữ cho nút Previous và Next */
        }
</style>
